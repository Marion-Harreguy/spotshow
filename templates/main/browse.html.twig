{% extends 'base.html.twig' %}

{% block title %}Spotshow - Liste des series et films{% endblock %}

{% block body %}

<!-- card -->
<main class="container mt-5 mb-5">
    <div class="row d-flex justify-content-around">
    {% for serie in series %}
        <div class="card border-dark mb-3" style="width: 20rem;">
        <div class="card-header d-flex justify-content-between">
            <a href="">{{ serie.platform }}</a>
            {% if serie.rate == "Top" %}
                <button type="button" class="btn btn-sm btn-info">{{ serie.rate }}</button>
            {% else %}
                <button type="button" class="btn btn-sm btn-warning">{{ serie.rate }}</button>
            {% endif %}
        </div>
        <div class="card-body">
        <a href="{{ path('main_read', {'id' : serie.id}) }}">
            <h4 class="card-title">{{ serie.title }}</h4>
        </a>
            <p class="card-text">{{ serie.type }} / {{ serie.genre }}</p>
        </div>
        </div>
    {% endfor %}
        </div>
    </div>
</main>

{% endblock %}

