{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<!-- card -->
<main class="container mt-5 mb-5">
    <div class="row d-flex justify-content-around">
    {% for serie in series %}
        <div class="card border-dark mb-3" style="width: 20rem;">
        <div class="card-header d-flex justify-content-between">
            <a href="">{{ serie.platform.name }}</a>
            <button type="button" class="btn btn-sm btn-{{ cycle(['info', 'warning'], loop.index0) }}">{{ serie.rate }}</button>
        </div>
        <div class="card-body">
            <h4 class="card-title">{{ serie.title }}</h4>
            <p class="card-text">{{ serie.type }} / {{ serie.genre }}</p>
        </div>
        </div>
    {% endfor %}
    </div>
    </div>
</main>

{% endblock %}
